<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context" xmlns:mvc="http://www.springframework.org/schema/mvc"
	xsi:schemaLocation="http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc-4.3.xsd
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.3.xsd">
	<!-- 导入配置文件 -->
	<import resource="classpath:applicationContext.xml" />

	<!-- IoC 注解解析器 -->
	<context:component-scan base-package="ByAnno" />

	<mvc:default-servlet-handler />

	<mvc:annotation-driven />

	<bean class="org.springframework.web.servlet.view.InternalResourceViewResolver">
		<property name="prefix" value="/WEB-INF/views/" />
		<property name="suffix" value=".jsp" />
	</bean>

	<!--
		对哪些资源做拦截
		/*：只能拦截一级路径,如/delete,/save,如果/employee/list就没效果了.
		/**：可以拦截一级或多级路径.
	-->
	<!-- 注册拦截器 -->
	<mvc:interceptors>
		<mvc:interceptor>
			<mvc:mapping path="/**" />
			<mvc:exclude-mapping path="/login" />
			<bean class="ByAnno.Interceptor.CheckLoging" />
		</mvc:interceptor>
	</mvc:interceptors>

	<!--
		<!-- 配置统一异常处理器，即不管什么异常都跳转到所设定的页面，不用自定义异常处理方法。这是简单的异常处理，属于XML配置模式 -->
	<bean class="org.springframework.web.servlet.handler.SimpleMappingExceptionResolver">
		设置错误的视图
		<property name="defaultErrorView" value="commons/error" />
		在错误页面,获取异常信息对象变量名称,缺省exception
		<property name="exceptionAttribute" value="ex" />
		下面属性配置可以实现根据不同类型异常,跳转到不同的错误页
		<property name="exceptionMappings">
			<value>
				这里还可以继续扩展不同异常类型的异常处理
				cn.wolfcode.p2p.web.exception.SecurityException=commons/nopermission
			</value>
		</property>
		-->
	</bean>
</beans>
